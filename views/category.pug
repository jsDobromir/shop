include mixins/header.pug
include mixins/productGridCategory.pug
include mixins/footer.pug
doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet" text="text/css" href="/styles/category.css")
        link(rel="preconnect" href="https://fonts.googleapis.com")
        link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
        link(rel="preconnect" href="https://fonts.googleapis.com")
        link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
        link(rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100&display=swap")
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A==" crossorigin="anonymous" referrerpolicy="no-referrer")
        script(type="text/javascript" src="/category.js")
        title Козметика
    body
        +header_category()
        main
            .container
                .filters__sort.d-lg-none
                    .filters__sort__filter
                        input#filter.filters__sort__filter__checkbox(type='checkbox')
                        button#filters_button.btn
                            label.filters__sort__filter__label(for='filter')
                                | филтри
                        .filters__sort__filter__fixedfilters
                            .filters__sort__filter__fixedfilters__wrapper
                                .filters__sort__filter__fixedfilters__wrapper__close
                                    .filters__sort__filter__fixedfilters__wrapper__close__wrapper
                                        span.close__icon
                                .filters__sort__filter__fixedfilters__wrapper__menu
                                    .filters__sort__filter__fixedfilters__wrapper__menu__item
                                        input#price-filter.filters__sort__filter__fixedfilters__wrapper__menu__item__checkbox(type='checkbox')
                                        label.filters__sort__filter__fixedfilters__wrapper__menu__item__label(for='price-filter')
                                            span.filters__sort__filter__fixedfilters__wrapper__menu__item__label__wrapper
                                                h4.filters__sort__filter__fixedfilters__wrapper__menu__item__label__wrapper__title
                                                    | Избери цена
                                                span.filters__sort__filter__fixedfilters__wrapper__menu__item__label__wrapper__plus-icon
                                        .filters__sort__filter__fixedfilters__wrapper__menu__item__list
                                            span.spanPrice До 50лв
                                            span.spanPrice 50 до 150лв
                                            span.spanPrice 150 до 300лв
                                            span.spanPrice 300 до 600лв
                                            span.spanPrice 600 до 1200лв
                                    .filters__sort__filter__fixedfilters__wrapper__menu__item
                                        input#brand-filter.filters__sort__filter__fixedfilters__wrapper__menu__item__checkbox(type='checkbox')
                                        label.filters__sort__filter__fixedfilters__wrapper__menu__item__label(for='brand-filter')
                                            span.filters__sort__filter__fixedfilters__wrapper__menu__item__label__wrapper
                                                h4.filters__sort__filter__fixedfilters__wrapper__menu__item__label__wrapper__title
                                                    | Избери марка
                                                span.filters__sort__filter__fixedfilters__wrapper__menu__item__label__wrapper__plus-icon
                                        .filters__sort__filter__fixedfilters__wrapper__menu__item__list
                                            span.spanBrand InstaNatural
                                            span.spanBrand Gold C
                                            span.spanBrand GNC
                                            span.spanBrand Life Extension
                                            span.spanBrand Olay
                                .applyButton
                                    button.btn-regular.btn--green(type='button') Приложи филтрите
                    .filters__sort__sort
                        .form__group
                            label.form__label(for='sort_by') Подреди по
                            select#sort_by.form-select
                                option Най-нови
                                option Цена най-висока
                                option Цена най-ниска

                .container_prod
                    .container_prod__filters.d-none.d-lg-block
                        .container_prod__filters__wrapper
                            .container_prod__filters__wrapper__menu
                                span.container_prod__filters__wrapper__menu__item
                                    a(href='#') Грижа за кожата
                                span.container_prod__filters__wrapper__menu__item
                                    a(href='#') Грижа за косата
                                span.container_prod__filters__wrapper__menu__item
                                    a(href='#') Лична грижа
                                span.container_prod__filters__wrapper__menu__item
                                    a(href='#') Грим
                                span.container_prod__filters__wrapper__menu__item
                                    a(href='#') Мъжка козметика
                            .container_prod__filters__wrapper__price
                                input(type="checkbox" id="price-filter-lg" class="container_prod__filters__wrapper__price__checkbox" checked)
                                label(for="price-filter-lg" class="container_prod__filters__wrapper__price__label")
                                    span.container_prod__filters__wrapper__price__label__tittle
                                        h4.container_prod__filters__wrapper__price__label__tittle__h Избери цена
                                        span.container_prod__filters__wrapper__price__label__tittle__plus-icon
                                .container_prod__filters__wrapper__price__list
                                    span.container_prod__filters__wrapper__price__list__item До 50лв
                                    span.container_prod__filters__wrapper__price__list__item 50 до 150лв
                                    span.container_prod__filters__wrapper__price__list__item 150 до 300лв
                                    span.container_prod__filters__wrapper__price__list__item 300 до 600лв
                                    span.container_prod__filters__wrapper__price__list__item 600 до 1200лв
                            .container_prod__filters__wrapper__brand
                                input(type="checkbox" id="brand-filter-lg" class="container_prod__filters__wrapper__brand__checkbox" checked)
                                label(for="brand-filter-lg" class="container_prod__filters__wrapper__brand__label")
                                    span.container_prod__filters__wrapper__brand__label__tittle
                                        h4.container_prod__filters__wrapper__brand__label__tittle__h Избери марка
                                        span.container_prod__filters__wrapper__price__label__tittle__plus-icon
                                .container_prod__filters__wrapper__brand__list
                                    span.container_prod__filters__wrapper__brand__list__item InstaNatural
                                    span.container_prod__filters__wrapper__brand__list__item Gold C
                                    span.container_prod__filters__wrapper__brand__list__item GNC
                                    span.container_prod__filters__wrapper__brand__list__item Life Extension
                                    span.container_prod__filters__wrapper__brand__list__item Olay
                    .container_prod__products
                        .container_prod__products__wrapper
                            span.container_prod__products__wrapper__span
                                h2.container_prod__products__wrapper__span__tittle 82 продукта
                            .filters__sort__sort.d-none.d-lg-block
                                .form__group
                                    label.form__label(for='sort_by') Подреди по
                                    select#sort_by.form-select
                                        option Най-нови
                                        option Цена най-висока
                                        option Цена най-ниска
                        .container_prod__products__grid
                            each product, index in products
                                +productGrid(product)
                            .loader-container.d-none
                                .loader
                        .container_prod__pagination
                            .container_prod__pagination__prevnext
                                a(href=`/kozmetika/${prevPage}` data-page=prevPage class=`page previous ${activePage==1 ? 'disabled' : ''}`) Предишна
                                a(href=`/kozmetika/${nextPage}` data-page=nextPage class=`d-md-none next page ${activePage==totalPages ? 'disabled' : ''}`) Следваща
                            .container_prod__pagination__pages
                                each page, index in pages
                                    if page == '...'
                                        span(class='ellipse')
                                    else
                                        a(href=`/kozmetika/${page}` data-page=page class=`page ${page==activePage ? 'disabled' : ''}`) #{page}
                            .container_prod__pagination__nextlg.d-none.d-md-flex
                                a(href=`/kozmetika/${nextPage}` data-page=nextPage class=`next page ${activePage==totalPages ? 'disabled' : ''}`) Следваща
                +footer()